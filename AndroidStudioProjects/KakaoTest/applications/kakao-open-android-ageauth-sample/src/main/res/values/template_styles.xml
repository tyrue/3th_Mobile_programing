<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="com_kakao_profile_property_value" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">57dp</item>
        <item name="android:layout_marginLeft">16sp</item>
        <item name="android:layout_marginRight">16sp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">15sp</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">@color/color2</item>
        <item name="android:textColor">@color/color3</item>
        <item name="android:background">@drawable/selector_item_bg</item>
    </style>

    <style name="button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/color6</item>
        <item name="android:textSize">16sp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">57dp</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="spinner" parent="@android:style/Widget.TextView">
        <item name="android:background">@drawable/selector_item_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">57dp</item>
        <item name="com.kakao.sdk.ageauth.sample:kakao_showTitleDivider">false</item>
        <item name="com.kakao.sdk.ageauth.sample:kakao_dialogTitle">@drawable/popup_bg_a</item>
        <item name="com.kakao.sdk.ageauth.sample:kakao_titleTextColor">@color/color6</item>
    </style>
</resources>
